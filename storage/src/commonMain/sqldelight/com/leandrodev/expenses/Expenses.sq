CREATE TABLE WalletQsldelight(
id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
name TEXT NOT NULL UNIQUE,
current_value INTEGER NOT NULL DEFAULT 0,
active INTEGER AS Boolean NOT NULL
);

createWallet:
INSERT INTO WalletQsldelight(name, current_value, active) VALUES(?, ?, ?);

getWallets:
SELECT * FROM WalletQsldelight;

getWallet:
SELECT * FROM WalletQsldelight WHERE name = ?;

removeAllWallets:
DELETE FROM WalletQsldelight;